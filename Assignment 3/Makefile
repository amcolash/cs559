CC = gcc
args = -O -Wall -lm

all:: basic adv

robot.o: robot.c
	$(CC) $(args) robot.c -o robot.o

basic:: basic1 basic2 basic3 basic4 basic5

basic1: robot.o
	@echo "--------------------------------------------------"
	./robot.o basic1.svg 45 10 45 10 45 10 45 10
	@echo "--------------------------------------------------"

basic2: robot.o
	@echo "--------------------------------------------------"
	./robot.o basic2.svg 30 10 -15 10 30 10 -15 10
	@echo "--------------------------------------------------"

basic3: robot.o
	@echo "--------------------------------------------------"
	./robot.o basic3.svg 15 10 30 10 45 10 60 10
	@echo "--------------------------------------------------"

basic4: robot.o
	@echo "--------------------------------------------------"
	./robot.o basic4.svg 45 10 0 10 -30 10 -15 10
	@echo "--------------------------------------------------"

basic5: robot.o
	@echo "--------------------------------------------------"
	./robot.o basic5.svg 180 10 90 10 30 10 15 10
	@echo "--------------------------------------------------"

adv:: adv1 adv2 adv3 adv4 adv5

adv1: robot.o
	@echo "--------------------------------------------------"
	./robot.o adv1.svg 30 10 -15 10 30 5 -15 5
	@echo "--------------------------------------------------"

adv2: robot.o
	@echo "--------------------------------------------------"
	./robot.o adv2.svg 60 20 -15 10 -15 10 -15 5
	@echo "--------------------------------------------------"

adv3: robot.o
	@echo "--------------------------------------------------"
	./robot.o adv3.svg 60 10 -30 10 15 10 15 10 15 10
	@echo "--------------------------------------------------"

adv4: robot.o
	@echo "--------------------------------------------------"
	./robot.o adv4.svg 60 20 -45 15 30 10 15 10 -15 10 15 10 -15 10 15 10
	@echo "--------------------------------------------------"

adv5: robot.o
	@echo "--------------------------------------------------"
	./robot.o adv5.svg 30 10 30 9 30 8 30 7 30 6 30 5 30 4 30 3 30 2 30 1
	@echo "--------------------------------------------------"

clean::
	rm -f robot.o *.svg
